<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	<ui:style>
	    .hidden{
			display:none;
		}
		.visible{
			display:inline;
		}
		.link{
			text-decoration:underline;
			cursor:pointer;
			font-style:italic;
		}
	</ui:style>
	<g:HTMLPanel styleName="message-container">
        <g:FocusPanel styleName="unread" ui:field="container">
          <d:ParaPanel>
           <g:InlineLabel styleName="label label-important" ui:field="spnUrgent">Urgent</g:InlineLabel>                       	
           <g:InlineLabel ui:field="spnSubject"></g:InlineLabel>     
           <d:Break/>
           <g:InlineLabel ui:field="spnDescription"></g:InlineLabel>            	
            		
           </d:ParaPanel>
         </g:FocusPanel>
         <span class="actions itemdisplay" style="display:none">
		    <g:Anchor ui:field="aClaim" styleName="{style.hidden}">Claim</g:Anchor>
		    <g:Anchor ui:field="aStart"  styleName="{style.hidden}">Start</g:Anchor>						    
			<g:Anchor ui:field="aResume"  styleName="{style.hidden}">Resume</g:Anchor>
			<g:Anchor ui:field="aComplete"  styleName="{style.hidden}">Complete</g:Anchor>
			<g:Anchor ui:field="aSuspend"  styleName="{style.hidden}">Suspend</g:Anchor>
			
			<g:Anchor ui:field="aDelegate"  styleName="{style.hidden}">Delegate</g:Anchor>
			<g:Anchor ui:field="aRevoke"  styleName="{style.hidden}">Revoke</g:Anchor>
			<g:Anchor ui:field="aStop"  styleName="{style.hidden}">Stop</g:Anchor>
			<g:Anchor ui:field="aForward"  styleName="{style.hidden}">Forward</g:Anchor>
			<g:Anchor ui:field="aView" styleName="{style.link} {style.hidden}">View Task</g:Anchor>		
			<g:Anchor ui:field="aForwardForApproval" styleName="{style.link} hidden">Submit For Approval</g:Anchor>
			
			<g:Anchor ui:field="aApprove"  styleName="{style.hidden}">Approve</g:Anchor>
			<g:Anchor ui:field="aReject"  styleName="{style.hidden}">Reject</g:Anchor>
		</span>
	</g:HTMLPanel>
</ui:UiBinder>
